<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar inside CardView for elevation -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:background="@color/dark_green"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Fit-Life"
            app:titleTextColor="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Weight Loss ImageButton -->
        <ImageButton
            android:id="@+id/btnWeightLoss"
            android:layout_width="340dp"
            android:layout_height="180dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:contentDescription="@string/diet1"
            android:scaleType="fitXY"
            android:src="@drawable/weights" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Weight Loss"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

<!--Muscle Gain-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnMuscleGain"
            android:layout_width="340dp"
            android:layout_height="180dp"
            android:src="@drawable/muscles"
            android:background="@null"
            android:scaleType="fitXY"
            android:contentDescription="@string/diet2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muscle Gain"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>


    <!-- Healthy Diet ImageButton -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnHealthyDiet"
            android:layout_width="340dp"
            android:layout_height="180dp"
            android:src="@drawable/healthys"
            android:background="@null"
            android:scaleType="fitXY"
            android:contentDescription="@string/diet3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Healthy Diet "
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>




