<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- Yoga Pose Image -->
        <ImageView
            android:id="@+id/yoga_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/downward_dog"
            android:layout_marginEnd="16dp"/>

        <!-- Text Layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Yoga Pose Name -->
            <TextView
                android:id="@+id/yoga_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yoga Pose Name"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Yoga Pose Short Description -->
            <TextView
                android:id="@+id/yoga_short_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short description of the yoga pose."
                android:textSize="14sp"
                android:textColor="@color/grey"
                android:paddingTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
